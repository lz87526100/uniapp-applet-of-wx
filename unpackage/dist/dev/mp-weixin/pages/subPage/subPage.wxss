/* -------- 全新照片卡片（原 .picGroup 已删除） -------- */
.pic-card.data-v-1a3fdbaf {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 30rpx;
  background: #f5f7fa;
  border-radius: 24rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 空态 */
.pic-empty.data-v-1a3fdbaf {
  width: 100%;
  height: 280rpx;
  border: 2rpx dashed #c8c9cc;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #909399;
  transition: all 0.3s;
}
.pic-empty.data-v-1a3fdbaf:active {
  transform: scale(0.98);
  opacity: 0.8;
}
.pic-empty__icon.data-v-1a3fdbaf {
  font-family: "iconfont";
  font-size: 64rpx;
  margin-bottom: 12rpx;
}
.pic-empty__txt.data-v-1a3fdbaf {
  font-size: 28rpx;
}

/* 图片项 */
.pic-item.data-v-1a3fdbaf {
  position: relative;
  width: calc((100% - 48rpx) / 3);
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}
.pic-item__img.data-v-1a3fdbaf {
  width: 100%;
  height: 100%;
  display: block;
}
.pic-item__mask.data-v-1a3fdbaf {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
}
.pic-item__close.data-v-1a3fdbaf {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-family: "iconfont";
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s;
}
.pic-item__close.data-v-1a3fdbaf:active {
  transform: scale(1.15);
}

